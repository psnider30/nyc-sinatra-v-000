<h1>Edit Figure: <%= @figure.name %></h1>
<br></br>

<form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="figure_name">Change Figure Name:</label>
  <br></br>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br></br>

  <label>Select or Unselect Figure Titles</label>
  <% Title.all.each do |title| %>
    <p><input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]"
      value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></p>
  <% end %>

  <h3>And/Or Create a new Title:</h3>

    <label for="title_name">Figure Title:</label>
      <input  type="text" name="title[name]" id="new_title"></input>
    <br></br>

    <label>Select or Unselect Figure Landmarks</label>
    <% Landmark.all.each do |landmark| %>
      <p><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]"
        value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></p>
    <% end %>

    <h3>And/Or create a new Landmark:</h3>

      <label for="landmark_name">Landmark Title:</label>
        <input  type="text" name="landmark[name]" id="new_landmark"></input>
      <br></br>

      <input type="submit" value="Edit Figure">

</form>
